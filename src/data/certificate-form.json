{
  "id": "certificateForm",
  "title": "Сертифікат",
  "buttonLabel": "Обрати сертифікат",
  "image": {
    "alt": "Масажний сертифікат",
    "src": "/images/certificate/certificate@2x.webp"
  },

  "form": {
    "formName": "certificateForm",
    "switchButtons": [
      { "label": "Обрати масаж", "type": "service" },
      { "label": "Обрати суму", "type": "price" }
    ],
    "priceTipsButtons": ["500", "1000", "1500"],
    "inputs": [
      {
        "id": "cf-i01",
        "label": "Сума",
        "type": "number",
        "name": "certificatePrice",
        "placeholder": "Введіть cуму",
        "required": true,
        "min": "1",
        "max": "99"
      },
      {
        "id": "cf-i02",
        "label": "Кількість",
        "type": "number",
        "name": "massageType",
        "required": true
      }
    ],
    "commonInputs": [
      {
        "id": "cf-ci01",
        "label": "Імʼя",
        "type": "text",
        "name": "userName",
        "placeholder": "Введіть ім’я",
        "required": true
      },
      {
        "id": "cf-ci02",
        "label": "Телефон",
        "type": "tel",
        "name": "phoneNumber",
        "pattern": "+ 38 (0##) ### ####",
        "placeholder": "Введіть номер",
        "defaultValue": "",
        "maxLength": 19,
        "required": true
      }
    ],
    "textarea": {
      "label": "Повідомлення",
      "name": "userMessage",
      "maxLength": 512,
      "placeholder": "Введіть повідомлення",
      "defaultValue": "",
      "required": true
    },
    "select": {
      "id": "cf-s01",
      "label": "Обрати масаж",
      "name": "massageType",
      "placeholder": "Оберіть варіант",
      "required": true
    },

    "defaultValues": { "userName": "", "userMessage": "", "phoneNumber": "" },
    "error": { "ariaLabel": "увага" },
    "submitBtn": { "label": "Надіслати" },
    "validation": {
      "userName": {
        "format": {
          "reg": "^(?!.*(?: --|- |' -| - '))(?![ -]*$)(?!.*--)[A-Za-zА-Яа-яЇїІіЄєҐґ '-]+$",
          "message": "Невірно введене ім’я."
        },
        "minLength": {
          "value": 1,
          "message": "Обовʼязкове поле"
        },
        "maxLength": {
          "value": 90,
          "message": "Максимальна довжина 90 символів"
        }
      },
      "phoneNumber": {
        "message": "Недійсний номер телефону",
        "required": { "value": 1, "message": "Обовʼязкове поле" },
        "minLength": { "value": 18, "message": "Не менше 11 символів" },
        "maxLength": { "value": 19, "message": "Не більше 13 символів" }
      },
      "userMessage": {
        "format": {
          "reg": "^[A-Za-zА-Яа-яЇїІіЄєҐґ0-9(),'\"-.!? \n\r]*$",
          "message": "Присутні недопустимі символи"
        },
        "maxLength": {
          "value": 512,
          "message": "У тексті має бути не більше 512 символів"
        }
      },
      "certificatePrice": {
        "min": {
          "value": 350,
          "message": "Мінімальна вартість"
        }
      },
      "massageType": {
        "format": {
          "reg": "^[A-Za-zА-Яа-яЇїІіЄєҐґ0-9(),'\"-.!? \n\r]*$",
          "message": "Присутні недопустимі символи"
        },
        "minLength": {
          "value": 1,
          "message": "Обовʼязкове поле"
        },
        "maxLength": {
          "value": 90,
          "message": "У тексті має бути не більше 90 символів"
        }
      },
      "massageQuantity": {
        "min": {
          "value": 1,
          "message": "Мінімальна кількість"
        },
        "max": {
          "value": 99,
          "message": "Мінімальна кількість"
        }
      },

      "common": {
        "required": "Обовʼязкове поле"
      }
    }
  }
}
